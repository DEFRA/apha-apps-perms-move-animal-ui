{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "module": "NodeNext",
    "noEmit": true,
    "paths": {
      "~/*": ["./*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "types": ["jest"]
  },
  "exclude": [
    ".cache",
    ".public",
    ".server",
    "coverage",
    "node_modules",
    "e2e-tests"
  ],
  "include": ["**/*.cjs", "**/*.js", ".eslintrc.*", ".prettierrc.*"]
}
