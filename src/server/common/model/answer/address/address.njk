{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/fieldset/macro.njk" import govukFieldset %}
{% set viewModel = answerViewModel %}
{% set value = viewModel.value %}
{% set errors = viewModel.errors %}

{%
  call govukFieldset({
    legend: {
      text: viewModel.question,
      classes: "govuk-fieldset__legend--l",
      isPageHeading: true
    }
  })
%}
  {{
    govukInput({
      label: {
        text: "Address line 1"
      },
      id: "addressLine1",
      name: "addressLine1",
      autocomplete: "address-line1",
      errorMessage: errors.addressLine1,
      value: value.addressLine1
    })
  }}

  {{
    govukInput({
      label: {
        text: "Address line 2 (optional)"
      },
      id: "addressLine2",
      name: "addressLine2",
      autocomplete: "address-line2",
      errorMessage: errors.addressLine2,
      value: value.addressLine2
    })
  }}

  {{
    govukInput({
      label: {
        text: "Town or city"
      },
      classes: "govuk-!-width-two-thirds",
      id: "addressTown",
      name: "addressTown",
      autocomplete: "address-level2",
      errorMessage: errors.addressTown,
      value: value.addressTown
    })
  }}

  {{
    govukInput({
      label: {
        text: "County (optional)"
      },
      classes: "govuk-!-width-two-thirds",
      id: "addressCounty",
      name: "addressCounty",
      errorMessage: errors.addressCounty,
      value: value.addressCounty
    })
  }}

  {{
    govukInput({
      label: {
        text: "Postcode"
      },
      classes: "govuk-input--width-10",
      id: "addressPostcode",
      name: "addressPostcode",
      autocomplete: "postal-code",
      errorMessage: errors.addressPostcode,
      value: value.addressPostcode
    })
  }}
{% endcall %}
