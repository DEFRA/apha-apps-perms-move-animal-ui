{% from "govuk/components/checkboxes/macro.njk" import govukCheckboxes %}
{% extends 'layouts/questions.njk' %}
{% from "macros/create-summary.njk" import createSummary %}

{% block heading %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-l">{{ heading }}</h1>
    </div>
  </div>
{% endblock %}

{% block beforequestion %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <div class="govuk-body" data-testid="app-page-body">
        {% for key, value in summary %}
          <h2 class="govuk-heading-m">{{ value.title }}</h2>
          {{ createSummary(value.answers) }}
        {% endfor %}
      </div>
    </div>
  </div>
{% endblock %}
{% block questions %}
  <h2 class="govuk-heading-m">Your declaration</h2>
  <!-- form URL below turns off errors on the next page  -->
  {{
    govukCheckboxes
    ({
      name: "confirmation",
      id: "confirmation",
      errorMessage: errors.confirmation,
      fieldset: {
        legend:{
          text: "Before you submit your application, you must select one of the declaration check boxes.",
          isPageHeading: false
        }
      },
      items: [{
        value: "confirm",
        text: "I confirm all the information given about my farm or premises is correct to the best of my knowledge",
        attributes: {
          'data-testid': 'confirm-statements-checkbox'
        }
      }, {
        value: "other",
        text: "I am submitting this form on behalf of someone else and confirm all the information given is correct to the best of my knowledge",
        attributes: {
          'data-testid': 'someone-else-checkbox'
        }
      }]
    })
  }}
{% endblock %}
